---
interface TechBadgeProps {
	name: string;
	imgSrc: string;
	altSrc: string;
}

import "../styles/global.css";

const { name, imgSrc, altSrc } = Astro.props as TechBadgeProps;
---

<div class="flex items-center gap-4 duration-200 ease-in-out hover:scale-105">
	<div class="bg-black-600 flex h-[60px] w-[60px] items-center justify-center rounded-full">
		<img src={imgSrc} alt={altSrc} height="30" width="30" />
	</div>
	<h3 class="dark:text-dark text-[14px] text-textColor md:text-[16px]">{name}</h3>
</div>
